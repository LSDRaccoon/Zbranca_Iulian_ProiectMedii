@page "/{id:int?}"
@model Zbranca_Iulian_ProiectMedii.Pages.Albume.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Arhiva Albume</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Titlu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Pret)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].DataAparitiei)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Label.NumeLabel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].Artist.NumeArtist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album[0].CategorieAlbum)
            </th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.AlbumD.Album)
        {
            string selectedRow = "";
            if (item.ID == Model.AlbumID)
            {
                selectedRow = "table-success";
            }
        <tr class="@selectedRow">

            <td>
                @Html.DisplayFor(modelItem => item.Titlu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pret)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAparitiei)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Label.NumeLabel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist.NumeArtist)
            </td>
            <td>
                @{
                    foreach (var category in item.CategorieAlbum)
                    {
                        @category.Categorie.NumeCategorie <br />
                    }
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
